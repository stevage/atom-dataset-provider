{{! This file defines the exact Atom feed that will be produced. Configure it for the specifics of your environment. }}
{{! See README.md for documentation }}
<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet type="text/xsl" href="/atom2html.xsl"?>
<feed xmlns="http://www.w3.org/2005/Atom" xmlns:tardis="http://mytardis.org/schemas/atom-import">
  <id>{{id}}</id>
  <title>{{title}}</title>
  <updated>{{updatedAsTimestamp}}</updated>
  {{#next}}
      <link rel="next" href="?{{next}}" />
  {{/next}}
  {{#prev}}
      <link rel="prev" href="?{{prev}}" />
  {{/prev}}
  {{#datasets}}
  <entry>
    <id>{{relpath1}}/{{relpath2}}</id> 
    <tardis:uniqueid>{{id}}</tardis:uniqueid>
    <author>
      <name>{{author.name}}</name>
    </author>
    <tardis:experimentTitle>{{relpath1}}</tardis:experimentTitle>
    <title>{{relpath2}}</title>
    <tardis:instrument>{{relpath2}}</tardis:instrument>
    <content type="xhtml">
      <div xmlns="http://www.w3.org/1999/xhtml">
        <ul>
          {{#files}}
{{! Commented out due to issues with links getting processed twice (MicroTardis project). }}
{{! <li>{href}</li> }}
          <li><a href="{{href}}" title="{{sha512}}" type="{{type}}">{{title}}</a></li>
          {{/files}}
        </ul>
      </div>
    </content>
    {{#files}}
    <link rel="enclosure"
          href="{{href}}"
          title="{{title}}"
          length="{{length}}"
          type="{{type}}"
          path="{{path}}"
          updated="{{updated}}"
          created="{{created}}"
          hash="sha-512:{{sha512}}"/>
    {{/files}}
    <updated>{{updatedAsTimestamp}}</updated>
    <category scheme="http://mytardis.org.au/ns/ExperimentTitle" term="{{relpath1}}" />
  </entry>
  {{/datasets}}
</feed>